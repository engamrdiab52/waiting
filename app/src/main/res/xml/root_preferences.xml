<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notification_and_sound">
        <SwitchPreferenceCompat
            app:key="notification_enable"
            app:defaultValue="true"
            app:summaryOn="@string/notification_sound_enabled"
            app:title="@string/enable_notification" />
        <SwitchPreferenceCompat
            app:dependency="notification_enable"
            app:key="notification_sound"
            app:defaultValue="true"
            app:summaryOff="@string/enable_notification_before"
            app:summaryOn="@string/notification_sound_enabled"
            app:title="@string/notification_sound" />

        <SwitchPreferenceCompat
            app:dependency="notification_sound"
            app:key="notification_speak_number"
            app:defaultValue="true"
            app:summaryOff="@string/enable_speaking_after"
            app:summaryOn="@string/speaking_number_enabled"
            app:title="@string/speak_the_number" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            app:key="night_mode"
            app:title="@string/night_mode" />
        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language_list"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>