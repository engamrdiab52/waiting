        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <Button
                android:id="@+id/button_service_increment_order"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/increment"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/button_service_decrease_order"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:maxLines="1"
                android:text="@string/decrement"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="visible"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5">

            <Button
                android:id="@+id/button_service_edit_order"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/edit_order"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/button_service_reset_order"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:maxLines="1"
                android:text="@string/reset"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="visible"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button_qrcode"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/generate_qr_code"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/button_edit_service"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:maxLines="1"
                android:text="@string/edit_service"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="visible"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/textView_category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#303F9F"
                tools:text="Clinic" />

            <TextView
                android:id="@+id/textView_name_of_service"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#303F9F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/textView_category"
                tools:text="DR/Mohamed Shosha" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button_logout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/log_out"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/button_service_delete_account"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:maxLines="1"
                android:text="@string/delete_account"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="visible"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>