    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.loginflow.service.serviceFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_add_my_number"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="3"
                android:clickable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#FF0000"
                app:strokeWidth="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/current_number"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#303F9F"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text_view_current_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center"
                        android:paddingBottom="8dp"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#303F9F"
                        android:textSize="90sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView_period_per_each_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:text="55"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FF0000"
                        android:textSize="40sp"
                        android:visibility="visible" />

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

