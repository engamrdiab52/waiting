<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Waiting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_text_home</item>
        <item name="colorPrimaryVariant">@color/color_button_home</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_text_home</item>
      </style>

    <style name="Theme.Waiting.NoActionBar" parent="Theme.Waiting">

        <!--u need these to get full screen behind system bars-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Waiting.NoActionBar.Fragment" parent="Theme.Waiting">
        <!--u need these to get full screen behind system bars-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--      <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/color_text_home</item>
        <item name="android:textColorSecondary">@color/color_text_home</item>
        <!--Dialog theme-->
        <item name="md_corner_radius">16dp</item>
        <item name="md_color_title">@color/color_text_home</item>
        <item name="md_color_content">@color/color_button_home</item>
        <item name="md_color_button_text">@color/color_button_home</item>
        <item name="backgroundTint">@color/white</item>
         <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="Theme.Waiting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/color_text_home</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Waiting" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_text_home</item>
    </style>
</resources>